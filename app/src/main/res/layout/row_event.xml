<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="7dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="130dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/row_event_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/row_event_image_description"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/row_event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#77000000"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:textColor="#FFFFFF" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/row_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row_event_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/row_event_place"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="0.5"
                android:background="#FFF"
                android:gravity="center_horizontal"
                android:padding="3dp" />

            <TextView
                android:id="@+id/row_event_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="0.5"
                android:background="#FFF"
                android:gravity="center_horizontal"
                android:padding="3dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>